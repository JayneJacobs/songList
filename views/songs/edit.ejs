<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= song.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/songs/<%= song._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="song[name]" value="<%= song.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="song[link]" value="<%= song.link %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="song[music]" value="<%= song.music %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="song[index]" value="<%= song.index %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit Song Update!</button>
                </div>
            </form>
            <a href="/songs">Go Back to Song List</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

