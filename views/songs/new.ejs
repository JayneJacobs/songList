<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Song</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/songs" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Song Title">  
                </div>
                <div class="form-group">
                      <input class="form-control" type="text" name="link" placeholder="Sample Audio URL">
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" name="music" placeholder="Sheet Music or Tabs URL">
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" name="index" placeholder="Song Number">
                </div>
               <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/songs">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
