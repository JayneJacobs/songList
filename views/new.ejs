
<% include partials/header %>

<div class="container">
<h1 style="text-align: center">Add A New Song</h1>

    <div class="row text-center">
        <div style="width:30%; margin:50px,auto; text-center;">
            <form action = "/songs" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name=name placeholder="Song Title">  
                </div>
                <div class="form-group">
                      <input class="form-control" type="text" name="link" placeholder="Sample Audio URL">
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" name="music" placeholder="Sheet Music or Tabs URL">
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" name="index" placeholder="Song Number">
                </div>
              
             <button class="btn btn-lg btn-primary" >Add Song</button>
    
            </form>
        </div>
        <a href="/songs">Go Back to Song List</a>
    </div>
</div>

 
