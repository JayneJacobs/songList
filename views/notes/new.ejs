<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Note to <%= song.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/songs/<%= song._id %>/notes" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="note[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit Note!</button>
                </div>
            </form>
            <a href="/songs">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>